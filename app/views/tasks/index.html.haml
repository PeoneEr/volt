.row
  .col-xs-12
    %h1= t('tasks.title')

    %table.table.table-responsive
      %thead
        %th= t('tasks.id')
        %th= t('tasks.created_at')
        %th= t('tasks.name')
        %th= t('tasks.user')

      %tbody
        - @tasks.each do |task|
          %tr
            %td= task.id
            %td= I18n.l(task.created_at, format: :long)
            %td= task.name
            %td= task.user.email

