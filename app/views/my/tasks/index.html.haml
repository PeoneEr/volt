.row
  .col-xs-12
    %h1= t('tasks.title')
    %h2= link_to t('tasks.new_task'), new_my_task_path

    %table.table.table-bordered
      %thead
        %th= t('tasks.id')
        %th= t('tasks.name')
        %th= t('tasks.description')
        %th= t('tasks.state')
        %th= t('tasks.created_at')
        - if current_user.admin?
          %th= t('tasks.user')
        %th= t('tasks.actions')

      %tbody
        - @tasks.each do |task|
          %tr
            %td= task.id
            %td= task.name
            %td= simple_format(task.description)
            %td= task.aasm.human_state
            %td= I18n.l(task.created_at, format: :long)
            - if current_user.admin?
              %td= task.user.email
            %td= edit_destroy_actions
